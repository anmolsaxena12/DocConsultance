<!-- doctor list -->
  <div class="container">
    <div class="row">
      <div class="col col-xs-12">
        <h1>Doctors List</h1>
        <hr>
      </div>
    </div>
    <nav class="navbar navbar-light bg-light">
      <form class="form-inline" action="/doctors" method="post">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
      <form id="tableForm" action="/city" method="post">
        <select class="selectpicker dd" data-style="btn-info" name="selectpicker" onchange="this.form.submit()">
        <!-- <optgroup label="Select City" selected = "selected"> -->
        <option value="Bhopal" selected="selected">Select City</option>
        <option name="city1" value="Bhopal">Bhopal</option>
        <option name="city2" value="Indore">Indore</option>
        <option name="city3" value="Jabalpur">Jabalpur</option>
        <option name="city4" value="Pune">Pune</option>
        </select>
      </form>
    </nav>

    <% newListItems.forEach(function(item){ %>
      <div class="card w-100 doccard">
        <div class="card-body">
          <h5 class="card-title"><b><%= item.name %></b></h5>
          <div class="row">
            <div class="col-sm-6">
              <h6> Doctor ID: <%= item.doctorID %></h6>
              <h6><%= item.degree %></h6>
              <h6><%=  item.specialization %></h6>
              <p class="card-text docp"><%= item.address %></p>
            </div>
            <div class="col-sm-6">
              <ul>
                <li>Experience :<%= item.experience %> </li>
                <li>Consultation fees : Rs.<%= item.fees %></li>
                <li>Phone no : <%= item.phoneNo %> </li>
                <li>Open from : <%= item.openDays %> </li>
                <li>Time : <%= item.openTime %> </li>
              </ul>
            </div>
          </div>
          <a href="/appointment" class="btn btn-primary">Book Appointment</a>
        </div>
      </div>
    <% }) %>
  </div>










